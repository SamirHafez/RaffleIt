@model Raffle.Models.UserProfile
@{
    ViewBag.Title = "Dashboard";
}
<h1>dashboard
        <small>manage your raffles and items</small>
</h1>

@if (((IList<Raffle.Models.Raffle>)@ViewBag.LastPurchases).Count != 0)
{
    <fieldset>
        <legend>my raffles
        <small>recently bought</small>
            @Html.ActionLink("more", "NA", null, new { @class = "btn btn-primary" })
        </legend>

        <ul class="thumbnails">
            @foreach (var raffle in (IList<Raffle.Models.Raffle>)@ViewBag.LastPurchases)
            {
                Html.RenderPartial("_ItemPreviewPartial", raffle.Item);
            }
        </ul>
    </fieldset>
}
else
{
    <div class="well">
        <h3>no raffles
            <small>you haven't purchased any raffles yet</small>
            @Html.ActionLink("see what's new", "Index", "Home", null, new { @class = "btn btn-primary btn-large pull-right span3" })
        </h3>
    </div>
}

@if (((IList<Raffle.Models.Item>)@ViewBag.MyItems).Count != 0)
{ 
    <fieldset>
        <legend>my items
        <small>recently added</small>
            @Html.ActionLink("more", "NA", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("sell an item", "Create", "Item", null, new { @class = "btn btn-info" })
        </legend>

        <ul class="thumbnails">
            @foreach (var item in (IList<Raffle.Models.Item>)@ViewBag.MyItems)
            {
                Html.RenderPartial("_ItemPreviewPartial", item);
            }
        </ul>
    </fieldset>
}
else
{
    <div class="well">
        <h3>no items
            <small>you haven't sold any items yet</small>
            @Html.ActionLink("sell an item", "Create", "Item", null, new { @class = "btn btn-primary btn-large pull-right span3" })
        </h3>
    </div>
}