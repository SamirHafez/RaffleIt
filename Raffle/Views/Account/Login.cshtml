@model Raffle.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row-fluid">
        <div class="well span7 offset2 text-center">
            <div class="row-fluid">
                <div class="span7">
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        <h1>login</h1>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="control-group">
                            <div class="controls">
                                <div class="input-prepend input-append">
                                    <span class="add-on">
                                        <i class="icon-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "username", autofocus = "autofocus" })
                                    <span class="add-on">
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </span>
                                </div>
                            </div>
                        </div>                        
                        <div class="control-group">
                            <div class="controls">
                                <div class="input-prepend input-append">
                                    <span class="add-on">
                                        <i class="icon-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Password, new { placeholder = "password" })
                                    <span class="add-on">
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="login" />
                    }
                </div>

                <div class="span5">
                    @Html.Action("ExternalLoginsList", "Account", new { ReturnUrl = ViewBag.ReturnUrl })
                </div>
            </div>
        </div>
    </div>
</div>















