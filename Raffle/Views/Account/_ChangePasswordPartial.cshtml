@model Raffle.Models.LocalPasswordModel

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>change password</legend>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend input-append">
                    <span class="add-on">
                        <i class="icon-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.OldPassword, new { placeholder = "old password" })
                    <span class="add-on">
                        @Html.ValidationMessageFor(model => model.OldPassword)
                    </span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend input-append">
                    <span class="add-on">
                        <i class="icon-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.NewPassword, new { placeholder = "new password" })
                    <span class="add-on">
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </span>
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend input-append">
                    <span class="add-on">
                        <i class="icon-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "confirm new password" })
                    <span class="add-on">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </span>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="change password" />
    </fieldset>
}
