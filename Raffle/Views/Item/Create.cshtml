@model Raffle.Models.Item

@{
    ViewBag.Title = "Sell Item";
}

    <h2>sell
        <small>add an item to raffle</small>
    </h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="span6">
            <fieldset>
                <legend>general</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </fieldset>
        </div>
        <div class="span4">
            <fieldset>
                <legend>picture</legend>
                <input type="file" name="pic" accept="image/*" />
            </fieldset>
        </div>
    </div>

    <fieldset>
        <legend>pricing</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TotalRaffleCount)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TotalRaffleCount, new[] { string.Empty, "5", "10", "20", "30", "40", "50" }.Select(i => new SelectListItem { Text = i, Value = i }))
            @Html.ValidationMessageFor(model => model.TotalRaffleCount)
        </div>
    </fieldset>

    <p>
        <input type="submit" class="btn btn-primary btn-large" value="Sell" />
    </p>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
