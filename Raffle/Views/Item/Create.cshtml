@model Raffle.Models.Item

@{
    ViewBag.Title = "Sell Item";
}

<div class="container">
    <div class="row-fluid">
        <div class="span12">

            <h1>sell an item
        <small>add an item to raffle</small>
            </h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <div class="row-fluid">
                    <div class="span7">
                        <fieldset>
                            <legend>general</legend>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Name)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Description)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Description)
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </fieldset>
                    </div>
                    <div class="span5">
                        <fieldset>
                            <legend>picture</legend>
                            <input type="file" name="pic" accept="image/*" />
                        </fieldset>
                    </div>
                </div>

                <fieldset>
                    <legend>pricing</legend>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Price)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.TotalRaffleCount)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.TotalRaffleCount, new[] { string.Empty, "5", "10", "20", "30", "40", "50" }.Select(i => new SelectListItem { Text = i, Value = i }))
                        @Html.ValidationMessageFor(model => model.TotalRaffleCount)
                    </div>
                </fieldset>

                <p>
                    <input type="submit" class="btn btn-primary btn-large" value="Sell" />
                </p>

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
